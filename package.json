  "description": "Micro Frontends sandbox.",
  "packageManager": "pnpm@8.6.0",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:watch": "turbo build:watch",
    "start": "turbo start",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "prettier . --check && eslint . --cache",
    "lint:fix": "prettier . --write && eslint . --cache --fix",
    "graph": "node ./tools/cli/graph.cjs",
    "clean": "node ./tools/cli/clean.cjs",
    "prepare": "pnpm build --filter=./apps/api --filter=./packages/* --filter=./micro-frontends/*"
  },
  "dependencies": {
    "turbo": "^1.10.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
