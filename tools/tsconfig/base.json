{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  }
}
