{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": { "dependsOn": ["^build"] },
    "build:watch": {
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "persistent": true
    }
  }
}
